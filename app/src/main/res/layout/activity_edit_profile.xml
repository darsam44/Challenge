<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acvtivities.Activities.EditProfile"
    android:background="@drawable/gradient_background">


    <EditText
        android:id="@+id/LastName_p_Edit"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="Last Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstName_p_Edit" />

    <EditText
        android:id="@+id/FirstName_p_Edit"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="First Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_Email_Edit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="Email:"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Email_p_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_Username_Edit" />

    <EditText
        android:id="@+id/Email_p_Edit"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserName_p_Edit" />

    <TextView
        android:id="@+id/t_Username_Edit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:text="Username"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/UserName_p_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_Last_name_Edit" />

    <EditText
        android:id="@+id/UserName_p_Edit"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="User Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LastName_p_Edit" />

    <TextView
        android:id="@+id/t_Last_name_Edit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="Last Name:"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/LastName_p_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_First_name_Edit" />

    <TextView
        android:id="@+id/t_First_name_Edit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="First Name:"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/FirstName_p_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_Phone_Edit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="252dp"
        android:text="Phone:"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Phone_p_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_Email_Edit" />

    <EditText
        android:id="@+id/Phone_p_Edit"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="252dp"
        android:text="Phone"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email_p_Edit" />

    <Button
        android:id="@+id/b_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Phone_p_Edit"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>